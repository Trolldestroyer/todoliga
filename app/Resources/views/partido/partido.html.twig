
{% extends '::base.html.twig' %}

{% block body %}
    <div class="fondopartido ">

        <h1 class="ligas">Partido {{ partido.primerEquipo}} vs {{ partido.segundoEquipo}}</h1>

        <div class="cajaliga col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-10 col-xs-offset-1" style=" ">
            {% if (app.user == partido.creador) or (app.user == "Albert") %}
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style=" border-bottom:2px solid rgba(0, 0, 0, 0.3); ">
                    <div style="" class="col-lg-2 col-lg-offset-10 col-md-2 col-md-offset-10 col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0" >
                        <a style="" class="verde col-lg-1 col-lg-offset-5 col-md-1 col-md-offset-4 col-sm-1 col-sm-offset-10 col-xs-1 col-xs-offset-7" href="{{ path('app_partido_updatePartido',{'id': partido.id}) }}">✏️️</a>
                        <a style="" class="verde col-lg-1 col-lg-offset-0 col-md-1 col-sm-1 col-xs-1" href="col-lg-1 col-l{{ path('app_partido_removePartido',{'id': partido.id}) }}">✖️</a>
                    </div>
                </div>
            {%   endif %}
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 2%"  >
                <div class="grisclaro col-lg-6 col-md-12 col-sm-12 col-xs-12" style="margin-bottom: 1%;  "><b style="color:white;">El equipo: </b>{{ partido.primerEquipo }} <b>con </b>{{ partido.primerResultado}}<b> puntos.</b></div>
                <div class="grisclaro col-lg-6 col-md-12 col-sm-12 col-xs-12" style=" margin-bottom: 1%; "><b style="color:white;">El equipo: </b>{{ partido.segundoEquipo }} <b>con </b>{{ partido.segundoResultado }}<b> puntos.</b></div>
                <div class="grisclaro col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-bottom: 1%;  "><b style="color:white;">Fecha del encuentro: </b>{{ partido.fechaencuentro|date("d/m/Y") }}</div>
                <div class="grisclaro col-lg-12 col-md-12 col-sm-12 col-xs-12" style=" margin-bottom: 1%; "><b style="color:white;">Nombre de la Ronda: </b><a class="verde" href="{{ path('app_ronda_showRonda', {'slug': partido.ronda.id}) }}">{{ partido.ronda.nombre }}</a></div>
                {% if ( partido.ganador =="empate") or (partido.ganador == partido.primerEquipo) or (partido.ganador == partido.segundoEquipo) %}
                    <div class="grisclaro detalleJugador col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-bottom: 1%;  "><b style="color:white;">El ganador és: </b>{{ partido.ganador }}</div>
                {% endif %}
                <div class="grisclaro detalleJugador col-lg-12 col-md-12 col-sm-12 col-xs-12" style="  "><b style="margin-bottom: 1%;color:white;">Descripción: </b>{{ partido.texto }}</div>

                {% if (app.user == partido.creador) or (app.user == "Albert") %}
                   <div class="grisclaro detalleJugador col-lg-6 col-md-6 col-sm-6 col-xs-12" style="  "><b style="margin-bottom: 1%;color:white;">Creado: </b>{{ partido.createdAt|date("d/m/Y") }}</div>
                   <div class="grisclaro detalleJugador col-lg-6 col-md-6 col-sm-6 col-xs-12" style="  "><b style="margin-bottom: 1%;color:white;">Autor: </b><a class="verde" href="{{ path('app_usuario_show', {'slug': partido.id }) }}">{{ partido.creador }}</a></div>
                {% endif %}
            </div>
        </div>
    </div>


{% endblock %}

{% block menu %}
    <div style="margin-top: 10px; color: white; text-align: center;" >
        <a class=" botonMenuInterior col-xs-12 col-sm-12 col-lg-12"  href="{{ path('app_ronda_showRonda', {'slug': partido.ronda.id}) }}"> ↪️️ Volver</a>
    </div>
{% endblock %}
