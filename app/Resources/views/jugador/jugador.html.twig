
{% extends '::base.html.twig' %}

{% block body %}
    <div class="fondoliga">

        <h1 class="ligas">Jugador {{ jugador.nombre }}</h1>
<!-- Texto y edicion basica-->
        <div class="cajaliga col-lg-offset-1 col-lg-7 col-md-offset-1 col-md-7 col-sm-7 col-xs-offset-1 col-xs-7" style=" ">
            {% if (app.user == jugador.creador) or (app.user == "Albert") %}
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="border-bottom:2px solid rgba(0, 0, 0, 0.3); ">
                    <div class="col-lg-2 col-lg-offset-10 col-md-12 col-sm-12 col-xs-12" >
                        <div  class="col-lg-1 col-lg-offset-3 col-md-1 col-sm-1 col-xs-1">
                            <a class="verde" href="{{ path('app_jugador_updateJugador',{'id': jugador.id}) }}">✏️️</a>
                        </div>
                        <div  class="col-lg-1 col-lg-offset-0 col-md-1 col-sm-1 col-xs-1">
                            <a class="verde" href="{{ path('app_jugador_removeJugador',{'id': jugador.id}) }}">✖️</a>
                        </div>
                    </div>
                </div>
            {%   endif %}
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"  >
                <div class="col-lg-10 col-md-8 col-sm-12 col-xs-12" style=" margin: 10px 0px 10px 0px;word-break: break-all; word-wrap: break-word; ">{{ jugador.apellidos }}</div>
            </div>
        </div>
<!-- Detalles -->
        <div class="cajaequipo col-lg-offset-1 col-lg-2 col-md-offset-1 col-md-2 col-sm-2 col-xs-offset-1 col-xs-2" style=" ">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="border-bottom:2px solid rgba(0, 0, 0, 0.3); text-align: center; font-size: 18px;margin-bottom: 5px; ">Detalles</div>

            {% if (app.user == jugador.creador) or (app.user == "Albert") %}
                    <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12" style=" margin-top: 5px;"><b>Creado: </b>{{ jugador.createdAt|date("d/m/Y") }}</div>
                    <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12" style=" margin-top: 5px;"><b>Modificado: </b>{{ jugador.updatedAt|date("d/m/Y") }}</div>
                    <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12"><b>Creador: </b><a class="" href="{{ path('app_usuario_show', {'slug': jugador.creador.id }) }}">{{ jugador.creador }}</a></div>
            {%   endif %}

        </div>

    </div>


{% endblock %}

