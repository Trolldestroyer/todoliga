    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/jumbotron.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/custom.css') }}" />
        <link rel="stylesheet" href="/css/style.css"/>

    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

<script>
    var ss= 1;
    $(document).ready(function(){
        $("#men").on({
            mouseenter: function(){
                $(this).css("margin-left", "-1%");
            },
            mouseleave: function(){
                $(this).css("margin-left", "-16%");
            },
            click: function(){
                if(ss==1){
                    $(this).css("margin-left", "-1%");
                    ss=0;
                }else{$(this).css("margin-left", "-160%");
                    ss=1;
                }  }
        });
    });

</script>
    <div id="men" class="col-md-5 col-lg-2 col-xs-12 " style="background-color: #282828; margin-top: 5%; position: absolute;z-index: 3;margin-left: -16%; border-bottom-right-radius: 3%;border-top-right-radius: 3%;  ">
            <ul class="col-xs-12 col-sm-12 col-lg-12" style="list-style-type: none; background-color: #363636;margin-bottom: 5%!important; margin-top: 5%!important; ">
                <t class=" col-xs-12 col-sm-12 col-lg-12">
                    <h4 style="text-align:center; color:white; border-bottom: 2px solid rgba(0, 0, 0, 0.3); margin-bottom: 8px!important; padding-bottom: 5px;" class=" col-xs-12 col-sm-12 col-lg-12" >Menu</h4>
                </t>
                <t>
                    <a href="/liga" class=" botonMenu col-xs-12 col-sm-12 col-lg-12" id="milk" >Inicio</a>
                </t>
                {% block menu %}{% endblock %}
                <t>
                    {{ render_esi(controller('UserBundle:HoritzontalLogin:horitzontalLogin', {'route': app.request.get('_route')})) }}
                </t>
            </ul>
    </div>

<div class="container-fluid" style="z-index: 1;">
    <div class="margin-bottom-md"></div>
    <div class="row">
        <div class="col-md-12">
            {% block body %}{% endblock %}
        </div>
    </div>
    <hr>
    <footer>
        <p class="text-right">&copy; 2017 Albert Cerd√†</p>
    </footer>
</div> <!-- /container -->

{% block javascripts %}
<script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock %}


</body>
</html>