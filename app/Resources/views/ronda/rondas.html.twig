                    {%   endif %}
                        <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" ">
                            <div class="col-lg-6 col-md-3 col-sm-12 col-xs-12" style=" text-align: center; "> <a style="	text-decoration: none!important;
" href="{{ path('app_ronda_showRonda', {'slug': ronda.id}) }}"><h4 class="grisclaro" style="margin-bottom: auto!important;">{{ ronda.nombre }}</h4></a></div>
                        </div>
                 </div>
