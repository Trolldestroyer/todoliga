{% block body %}

<div class="fondoequipos" style="	 ">

    <h1 id="" class="ligas">Rondas</h1>

    <div class=" contenedor-lig container col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 10px;">
        <div class="profile-body">
            {% for ronda in liga.rondas %}
                 <div class="cajaligas col-lg-offset-1 col-lg-4 col-md-offset-1 col-md-4 col-sm-offset-1 col-sm-4 col-xs-offset-1 col-xs-10">
