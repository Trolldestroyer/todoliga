
{% extends '::base.html.twig' %}

{% block body %}
    <div class="fondoliga">

        <h1 class="ligas">Ronda {{ ronda.nombre }}</h1>
<!-- Texto y edicion basica-->
        <div class="cajaliga col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-10 col-xs-offset-1" style="height: 30%; ">
            {% if (app.user == ronda.creador) or (app.user == "Albert") %}
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style=" border-bottom:2px solid rgba(0, 0, 0, 0.3); ">
                    <div style="" class="col-lg-2 col-lg-offset-10 col-md-2 col-md-offset-10 col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0" >
                            <a style="" class="verde col-lg-1 col-lg-offset-5 col-md-1 col-md-offset-4 col-sm-1 col-sm-offset-10 col-xs-1 col-xs-offset-7" href="{{ path('app_ronda_updateRonda',{'id': ronda.id}) }}">✏️️</a>
                            <a style="" class="verde col-lg-1 col-lg-offset-0 col-md-1 col-sm-1 col-xs-1" href="col-lg-1 col-l{{ path('app_ronda_removeRonda',{'id': ronda.id}) }}">✖️</a>
                    </div>
                </div>
            {%   endif %}
<!-- Descripción de la ronda -->
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style=""  >
                <div class="grisclaro col-lg-2 col-md-2 col-sm-2 col-xs-2" style=""><h4>Descripción:</h4> </div>
                <div class="col-lg-10 col-md-8 col-sm-12 col-xs-12" style="  margin: 10px 0px 10px 0px;word-break: break-all; word-wrap: break-word; ">{{ ronda.texto }}</div>
            </div>
        </div>
<!-- Partidos de la ronda -->
        <div class=" col-lg-11 col-md-12 col-sm-12 col-xs-12">
            {% for partido in ronda.partidos %}
            <div class="cajaligas col-lg-3 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12 ">
                {% if (app.user == partido.creador) or (app.user == "Albert") %}
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="border-bottom:2px solid rgba(0, 0, 0, 0.3); ">
                        <div class="col-lg-12 col-lg-offset-0 col-md-12 col-sm-12 col-xs-12" >
                            <div  class="col-lg-1 col-lg-offset-8 col-md-1 col-md-offset-10 col-sm-1 col-sm-offset-10 col-xs-1 col-xs-offset-8">
                                <a class="verde" href="{{ path('app_partido_updatePartido',{'id': partido.id}) }}">✏️️</a>
                            </div>
                            <div  class="col-lg-1 col-lg-offset-0 col-md-1 col-sm-1 col-xs-1">
                                <a class="verde" href="{{ path('app_partido_removePartido',{'id': partido.id}) }}">✖️</a>
                            </div>
                        </div>
                    </div>
                {%   endif %}
                <div class="" style="margin-top:10px;">Partido: {{ partido.nombre }}</div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h4>{{ partido.primerEquipo }}</h4></div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h6>{{ partido.primerResultado }}</h6></div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h4>{{ partido.segundoEquipo }}</h4></div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h6>{{ partido.segundoResultado }}</h6></div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h6>{{ partido.ganador }}</h6></div>
                <div class="boton-detalles"><a href="{{ path('app_partido_jugarPartido',{'id': partido.id}) }}"><button class="btn btn-success" > ↪️️ Resultados</button></a></div>


            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

{% block menu %}
    <div style="margin-top: 10px; color: white; text-align: center;" >
        <a style=""  class=" botonMenuInterior col-xs-12 col-sm-12 col-lg-12" href="{{ path('app_partido_insertPartido', {'id': ronda.id}) }}">Añadir Ronda</a>
    </div>
{% endblock %}
